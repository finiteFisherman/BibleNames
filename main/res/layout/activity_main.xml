<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWheat"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorWheat"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/aButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column ="0"
                android:text="A"/>


            <Button
                android:id="@+id/bButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column ="1"
                android:text="B"/>


            <Button
                android:id="@+id/cButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column ="2"
                android:text="C"/>


            <Button
                android:id="@+id/dButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column ="3"
                android:text="D"/>


            <Button
                android:id="@+id/eButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column ="0"
                android:text="E"/>


            <Button
                android:id="@+id/fButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column ="1"
                android:text="F"
                />

            <Button
                android:id="@+id/gButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column ="2"
                android:text="G"
                />

            <Button
                android:id="@+id/hButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column ="3"
                android:text="H"
                />

            <Button
                android:id="@+id/iButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column ="0"
                android:text="I"
                />

            <Button
                android:id="@+id/jButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column ="1"
                android:text="J"
                />

            <Button
                android:id="@+id/kButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column ="2"
                android:text="K"
                />

            <Button
                android:id="@+id/lButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column ="3"
                android:text="L"
                />

            <Button
                android:id="@+id/mButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column ="0"
                android:text="M"
                />

            <Button
                android:id="@+id/nButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column ="1"
                android:text="N"
                />

            <Button
                android:id="@+id/oButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column ="2"
                android:text="O"
                />

            <Button
                android:id="@+id/pButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column ="3"
                android:text="P"
                />

            <Button
                android:id="@+id/qButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column ="0"
                android:text="Q"
                />

            <Button
                android:id="@+id/rButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column ="1"
                android:text="R"
                />

            <Button
                android:id="@+id/sButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column ="2"
                android:text="S"
                />

            <Button
                android:id="@+id/tButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column ="3"
                android:text="T"
                />

            <Button
                android:id="@+id/uButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column ="0"
                android:text="U"
                />

            <Button
                android:id="@+id/vButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column ="1"
                android:text="V"
                />

            <Button
                android:id="@+id/wButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column ="2"
                android:text="W"
                />

            <Button
                android:id="@+id/xButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column ="3"
                android:text="X"
                />

            <Button
                android:id="@+id/yButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column ="0"
                android:text="Y"
                />

            <Button
                android:id="@+id/zButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column ="1"
                android:text="Z"
                />

            <Button
                android:id="@+id/randButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column ="2"
                android:text="Random"
                />

            <Button
                android:id="@+id/infoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column ="3"
                android:text="info"
                />

        </GridLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/homeAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-1944052140945352/9906361130">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>